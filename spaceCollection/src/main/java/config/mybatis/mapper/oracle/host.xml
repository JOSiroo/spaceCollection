<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sc.spaceCollection.host.model.HostDAO">
	
	<resultMap type="SpaceTypeAllVo" id="selectSpace">
		<collection property="spaceTypeList" javaType="ArrayList" ofType="map" column="categoryNo"
			select="selectSpaceType">
		</collection>
	</resultMap>
	
	<!-- (메인)공간 카테고리 조회 -->
	<select id="selectSpaceCategory" parameterType="int" resultMap="selectSpace">
		select * from SpaceTypeCategory
		where categoryNo = #{categoryNo}
	</select>
	
	<!-- 공간 카테고리별 타입 조회 -->
	<select id="selectSpaceType" parameterType="int" resultType="SpaceTypeAllVO">
		select * from spaceTypeView
		where categoryNo = #{categoryNo}
	</select>
	
</mapper>